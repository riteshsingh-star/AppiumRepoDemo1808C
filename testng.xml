<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="AppiumTestSuite" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="Utils.Listeners"/>
    </listeners>

    <test name="Device1Test">
        <parameter name="deviceIndex" value="0"/>
        <classes>
            <class name="Test.WorkingWithBrowserTest"/>
        </classes>
    </test>

    <test name="Device2Test">
        <parameter name="deviceIndex" value="1"/>
        <classes>
            <class name="Test.WorkingWithGeneralStoreTest"/>
        </classes>
    </test>
</suite>
